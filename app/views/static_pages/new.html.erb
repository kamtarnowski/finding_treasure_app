

<div class="container">

  <div class="row" style="padding-top: 30px">
      <%= simple_form_for :forms, url: { action: :form, controller: 'static_pages'} do |form| %>

        <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">

          <div id="map-canvas" style="width: 100%; height: 400px; webkit-transform: none !important; position: static !important; transform: none !important"></div>

          <%= form.input :longitude, as: :hidden %>
          <%= form.input :latitude, as: :hidden %>

        </div>

        <div class="col-md-6 col-md-offset-2 col-xs-10 col-xs-offset-1" style="padding-top: 30px">
          <%= form.input :email %>

          <%= form.button :submit, 'Submit' %>

        </div>

      <% end %>

  </div>
</div>


<script>
    $(document).ready(function() {
        function initialize() {
            var mapOptions = {
                zoom: 8,
                center: new google.maps.LatLng(-34.397, 150.644)
            };

            var map = new google.maps.Map(document.getElementById('map-canvas'),
                    mapOptions);
        }
        initialize();
    });

